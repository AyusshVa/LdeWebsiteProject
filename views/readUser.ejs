<%- include("partials/header") -%>
<table class="table table-striped table-primary">
    <thead>
      <tr>
        <th>Role</th>
        <th>Avatar</th>
        <th>Name</th>
        <th>Login id</th>
        <th>User id</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Account Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <%if (records !== 'undefined' || records.length >0 ){ %>
      <% records.forEach(function(row){ %>
      <tr>
        <td><%= row.role %></td>
        <td><img src=<%= row.avatar %> alt=""></td>
        <td><%= row.name%></td>
        <td><%= row.loginId %></td>
        <td><%= row.userId %></td>
        <td><%= row.email %></td>
        <td><%= row.phone %></td>
        <td><%= row.accountStatus %></td>
        <td>
            <form action="/delete/<%= row.loginId %>" method="post">
                <button>del</button>
            </form>
            <form action="/readMore/<%= row.loginId %>" method="post">
                <button>more</button>
            </form>
            <form action="/update/<%= row.loginId %>" method="post">
                <button>upd</button>
            </form>
        </td>
      </tr>
      <% })}else{ %>
        <tr>
            <td colspan="6">No Record Found</td>
          </tr>
        <% } %>
    </tbody>
  </table>

  
<%- include("partials/footer") -%>
